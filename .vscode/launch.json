{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Z.AI Search API Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/integrations/kilo_code_api.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "ZAI_API_KEY": "${env:ZAI_API_KEY}"
      },
      "justMyCode": false
    },
    {
      "name": "Run Kilo Code Example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/kilo_code_example.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "ZAI_API_KEY": "${env:ZAI_API_KEY}"
      }
    },
    {
      "name": "Run Custom Agent Example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/custom_agent.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "ZAI_API_KEY": "${env:ZAI_API_KEY}"
      }
    },
    {
      "name": "Run Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "ZAI_API_KEY": "${env:ZAI_API_KEY}"
      }
    },
    {
      "name": "Run Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--cov=src"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
